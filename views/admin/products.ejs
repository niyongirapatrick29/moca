<%- include('include/back_head.ejs') %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Navigation-->
    <%- include('include/back_top_navigation.ejs') %>
        <%- include('include/back_navigator.ejs') %>
            <!-- end Navigation-->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <div class="row">
                        <!-- card -->
                        <div class="card col-md-12 col-lg-12 col-sm-12">
                            <div class="card-body" style="display: flex;">
                                <h3 class="card-title">LIST OF AVAILABLE CAKES ONLINE</h3>
                                <a href="/admin/new_product" class="btn btn-primary btn-sm" style="margin-left: 40%;">
                                    <i>Add Cake <span class="mdi mdi-plus"></span></i></a>
                            </div>
                            <% if(ibigaragara_data.length > 0){ %>
                                <% if(errorMessage){ %>
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                                        <strong><%= errorMessage %></strong> .
                                    </div>
                                    <% } %>
                                        <div class="comment-widgets scrollable" style="max-height: 400px;">
                                            <!-- Comment Row -->
                                            <% for(let news_data of ibigaragara_data) { %>
                                                <div class="d-flex flex-row comment-row m-t-0">
                                                    <div class="p-4"><img src="/uploads/<%= news_data.image_news %>" alt="user" width="100" class="rounded-"></div>
                                                    <div class="comment-text w-100">
                                                        <h6 class="font-medium">
                                                            <%= news_data.title %>
                                                        </h6>
                                                        <span class="m-b-15 d-block"><%= news_data.subtitle %> </span>
                                                        <div class="comment-footer">
                                                            <span class="text-muted float-right"> &nbsp;By <b><small> <%= news_data.writer %></small></b></span>
                                                            <span class="text-muted float-right"><%= news_data.new_date %></span>
                                                            <a href="" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal<%= news_data._id %>">Details</a>

                                                            <a href="/admin/edit_ibigaragara/<%=news_data._id %>" class="btn btn-primary btn-sm">Edit</a>

                                                            <a href="/admin/publish_ibigaragara/<%= news_data._id %>" class="btn btn-success btn-sm">
                                                                <% if(news_data.news_status === '1'){ %>
                                                                    Unpublish
                                                                    <% }else{ %>
                                                                        Publish
                                                                        <% } %>
                                                            </a>
                                                            <a href="/admin/delete_ibigaragara/<%= news_data._id %>" class="btn btn-danger btn-sm">Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal fade" id="myModal<%= news_data._id %>" role="dialog">
                                                    <div class="modal-dialog">

                                                        <!-- Modal content-->
                                                        <div class="modal-content ">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">
                                                                    <%= news_data.title %>
                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="el-card-avatar el-overlay-1">
                                                                    <img src="/uploads/<%=news_data.image_news %>" alt="user" style="width: 100%; height: 300px;">
                                                                </div>
                                                                <h4 class="modal-title">
                                                                    <%= news_data.subtitle %>
                                                                </h4>
                                                                <p>
                                                                    <%= news_data.full_news %>
                                                                </p>
                                                                <p>
                                                                    <%= news_data.writer %>
                                                                </p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                                <% } %>

                                        </div>

                                        <% }else{%>
                                            <h3>No data in database</h3>
                                            <% } %>
                        </div>

                    </div>
                    <div class="fixed">
                        <% if (pages > 0) { %>
                            <ul class="pagination text-center">
                                <% if (current == 1) { %>
                                    <li class="disabled"><a>First</a></li>
                                    <% } else { %>
                                        <li><a href="/admin/products/?page=1">First</a></li>
                                        <% } %>
                                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                <% if (i !== 1) { %>
                                                    <li class="disabled"><a>...</a></li>
                                                    <% } %>
                                                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                                            <% if (i == current) { %>
                                                                <li class="active">
                                                                    <a>
                                                                        <%= i %>
                                                                    </a>
                                                                </li>
                                                                <% } else { %>
                                                                    <li>
                                                                        <a href="/admin/products/?page=<%= i %>">
                                                                            <%= i %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                                        <% if (i == Number(current) + 4 && i < pages) { %>
                                                                            <li class="disabled"><a>...</a></li>
                                                                            <% } %>
                                                                                <% } %>
                                                                                    <% if (current == pages) { %>
                                                                                        <li class="disabled"><a>Last</a></li>
                                                                                        <% } else { %>
                                                                                            <li>
                                                                                                <a href="/admin/products/?page=<%= pages %>">
Last
</a>
                                                                                            </li>
                                                                                            <% } %>
                            </ul>
                            <% } %>
                    </div>
                    <!-- ============================================================== -->
                </div>
            </div>
            <!-- ============================================================== -->
            <%- include('include/back_footer.ejs') %>
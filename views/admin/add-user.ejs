<%- include('include/back_head.ejs') %>
    <!-- Navigation-->
    <%- include('include/back_top_navigation.ejs') %>
        <%- include('include/back_navigator.ejs') %>
            <!-- end Navigation-->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <form class="form-horizontal" action="/admin/add_user" method="POST">
                                    <div class="card-body">
                                        <h3 class="card-title"><b>FILL THE PERSONAL INFORMATION</b></h3>
                                        <% if(errorMessage){ %>
                                            <h4 style="color: brown;">
                                                <%= errorMessage %>
                                            </h4>
                                            <% } %>
                                                <div class="form-group ">
                                                    <label for="fname" class="col-sm-12  control-label col-form-label">First Name</label>
                                                    <div class="col-sm-12">
                                                        <input type="text" class="form-control" name="fname" id="fname" placeholder="First Name Here">
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="lname" class="col-sm-12  control-label col-form-label">Last Name</label>
                                                    <div class="col-sm-12">
                                                        <input type="text" class="form-control" name="lname" id="lname" placeholder="Last Name Here">
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="email1" class="col-sm-12 control-label col-form-label">Phone</label>
                                                    <div class="col-sm-12">
                                                        <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                                        <input type="text" class="form-control" name="phone" id="phone" placeholder="Company Name Here">
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="email1" class="col-sm-12 control-label col-form-label">Email</label>
                                                    <div class="col-sm-12">
                                                        <input type="email" class="form-control" name="email" id="email" placeholder="Email Name Here">
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <label for="lname" class="col-sm-12 control-label col-form-label">Password</label>
                                                    <div class="col-sm-12">
                                                        <input type="password" class="form-control" name="passcode" id="passcode" placeholder="Password Here">
                                                    </div>
                                                </div>

                                                <div class="form-group ">
                                                    <label for="cono1" class="col-sm-12  control-label col-form-label">Address</label>
                                                    <div class="col-sm-12">
                                                        <input type="text" class="form-control" name="address" id="address" placeholder="Address Here">
                                                    </div>
                                                </div>

                                    </div>
                                    <div class="border-top">
                                        <div class="card-body">
                                            <button type="submit" class="btn btn-primary">Save new user</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                    <!-- ============================================================== -->
                </div>
            </div>
            <!-- ============================================================== -->
            <%- include('include/back_footer.ejs') %>
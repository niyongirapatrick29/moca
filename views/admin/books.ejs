<%- include('include/back_head.ejs') %>
  <!-- Navigation-->
<%- include('include/back_top_navigation.ejs') %>
<%- include('include/back_navigator.ejs') %>
<!-- end Navigation-->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <div class="container-fluid">
       <!-- ============================================================== -->
      <div class="row">   
        <!-- card -->
        <div class="card col-md-12">
            <div class="card-body scrollable" style="max-height: 400px; display: flex;">
                <h3 class="card-title m-b-0">URUTONDE RW'IBITABO N'INYANDIKO TWASOHOYE</h3>
                <a href="/backend/new_book" class="btn btn-primary" style="margin-left: 30%;">INSHYA</a>
                
            </div>
            <% if(errorMessage){ %>
                <h3 style="color: brown;"><%= errorMessage %></h3>
                <% } %>
                <div class="row scrollable" style="max-height: 400px;  padding: 5px;">
            <% for(let books_data of book_data){ %>
            
            
            
                <div class="col-md-6 col-sm-12" style="display: flex; ">
                    <div class="p-2"><img src="/uploads/<%= books_data.image %>" alt="user" width="60" class="rounded-"></div>
                    <div class="card-body widget-content">
                        <h4><%= books_data.title %></h4>
                        <%= books_data.description %>
                        <br>
                        <a href="/backend/download_book/<%=books_data._id %>">Download!!</a>
                        <hr>
                        <div class="comment-footer">
                        
                            <span class="text-muted float-right">April 14, 2016</span> 

                            <a href="/backend/edit_book/<%= books_data._id %>" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/backend/book_publish/<%= books_data._id %>" class="btn btn-success btn-sm">
                                <% if(books_data.book_status === '1'){ %>
                                    Unpublish
                                <% }else{ %>
                                    Publish
                                <% } %>
                            </a>
                            <a href="/backend/book_delete/<%= books_data._id %>" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
           
            <% } %>
        </div>
        </div>
        
      </div>
    <!-- ============================================================== -->
    </div>
  </div>
<!-- ============================================================== -->
<%- include('include/back_footer.ejs') %>
<%- include('include/back_head.ejs') %>
    <!-- Navigation-->
    <%- include('include/back_top_navigation.ejs') %>
        <%- include('include/back_navigator.ejs') %>
            <!-- end Navigation-->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <div class="row">
                        <!-- card -->
                        <div class="card col-md-12">
                            <div class="card-body scrollable" style="max-height: 400px; display: flex;">
                                <h3 class="card-title m-b-0">SOBANUKIRWA NA BYOSE</h3>
                            </div>
                            <hr>
                            <% if(data_sobanukirwa.length > 0){ %>
                                <ul class="list-style-none">
                                    <% for( let ibisobanuro of data_sobanukirwa){ %>
                                        <li class="d-flex no-block card-body">
                                            <i class="fa fa-check-circle w-30px m-t-5"></i>
                                            <div>
                                                <h4>
                                                    <a data-toggle="collapse" href="#collapse1<%= ibisobanuro._id %>" class="m-b-0 font-medium p-0">
                                                        <%=ibisobanuro.ikibazo %> &nbsp;
                                                    </a>
                                                </h4>
                                                <a href="sobanukirwad/<%= ibisobanuro._id %>" class="btn btn-outline-danger">Delete</a>
                                            </div>
                                            <div class="panel-group">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">
                                                    </div>
                                                    <div id="collapse1<%= ibisobanuro._id %>" class="panel-collapse collapse">
                                                        <% for(let ibitekerezo of ibisobanuro.comments){ %>
                                                            <div class="alert alert-dark">
                                                                <div class="panel-header">
                                                                    <%= ibitekerezo.author_email %>
                                                                </div>
                                                                <div class="panel-body">
                                                                    <%= ibitekerezo.message %>
                                                                        <span>
                                                                      <a href="sobanukirwa/<%= ibitekerezo._id %>">Delete</a>
                                                                      </button>
                                                                    </span>
                                                                </div>

                                                            </div>
                                                            <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="ml-auto">
                                                <div class="tetx-right">
                                                    <a href="" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal<%= ibisobanuro._id %>" style="padding: 10px; text-decoration: none; color: aliceblue;">IGISUBIZO</a>

                                                </div>
                                            </div>
                                        </li>
                                        <div class="modal fade" id="myModal<%= ibisobanuro._id %>" role="dialog">
                                            <div class="modal-dialog">

                                                <!-- Modal content-->
                                                <div class="modal-content ">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">KORESHA IYI FORM USUBIZE IKI KIBAZO</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <h4 class="modal-title">
                                                            <%= ibisobanuro.ikibazo %>
                                                        </h4>
                                                        <hr>
                                                        <form action="/admin/sobanukirwa" method="POST">
                                                            <label for="igisubizo">IGISUBIZO</label>
                                                            <input type="hidden" name="ikibazo_ID" id="ikibazo_ID" value="<%=ibisobanuro._id %>">
                                                            <input type="hidden" name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                                            <textarea name="igisubizo" id="igisubizo" cols="60" rows="5" placeholder="Andika uzubize iki kibazo"></textarea>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-success">Save</button>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                    </form>
                                                </div>

                                            </div>
                                        </div>

                                        <% } %>
                                </ul>
                                <% } %>

                        </div>

                    </div>
                    <!-- ============================================================== -->
                </div>
            </div>
            <!-- ============================================================== -->
            <%- include('include/back_footer.ejs') %>
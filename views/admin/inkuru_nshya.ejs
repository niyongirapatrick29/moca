<%- include('include/back_head.ejs') %>
  <!-- Navigation-->
<%- include('include/back_top_navigation.ejs') %>
<%- include('include/back_navigator.ejs') %>
<!-- end Navigation-->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <div class="container-fluid">
       <!-- ============================================================== -->
      <div class="row">   
        <div class="col-md-8">
          <div class="card">
              <form class="form-horizontal" action="/admin/<% if(editing){ %>edit_ibigaragara<% }else{ %>inkuru_nshya<% } %>" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                      <h4 class="card-title"><b>FILL THE FORM OF NEWS INFORMATION</b></h4>
                      <% if(errorMessage){ %>
                        <h3 style="color: brown;"><%= errorMessage %></h3>
                        <% } %>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    <label for="image" class="col-sm-12  control-label col-form-label">image</label>
                                    <div class="col-sm-12">
                                        <% if(editing){ %>
                                            <input type="hidden" class="form-control" name="editID" id="editID"  value="<%= editing_data._id %>">
                                        <% } %>
                                        <input type="file" class="form-control" name="image" id="image" placeholder=" Here" value="<% if(editing){ %><%= editing_data.image_news %><% } %>">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="title" class="col-sm-12  control-label col-form-label">Title</label>
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control" name="title" id="title" placeholder="Title Here" value="<% if(editing){ %><%= editing_data.title %><% } %>">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="subtitle" class="col-sm-12 control-label col-form-label">Subtitle</label>
                                    <div class="col-sm-12">
                                        <input type="hidden"  name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                        <input type="text" class="form-control" name="subtitle" id="subtitle" placeholder="subtitle  Here" value="<% if(editing){ %><%= editing_data.subtitle %><% } %>">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                
                                <div class="form-group ">
                                    <label for="title" class="col-sm-12  control-label col-form-label">Full News</label>
                                    <div class="col-sm-12">
                                        <textarea name="full_news" class="form-control" id="full_news" cols="30" rows="10"><% if(editing){ %><%= editing_data.full_news %><% } %></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                  </div>
                  <div class="border-top">
                      <div class="card-body">
                          <button type="submit" class="btn btn-primary"><% if(editing){ %>Save updated news<% }else{ %>Save news<% } %></button>
                      </div>
                  </div>
              </form>
          </div>
        </div>
        
      </div>
    <!-- ============================================================== -->
    </div>
  </div>
<!-- ============================================================== -->
<%- include('include/back_footer.ejs') %>
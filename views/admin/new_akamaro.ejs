<%- include('include/back_head.ejs') %>
  <!-- Navigation-->
<%- include('include/back_top_navigation.ejs') %>
<%- include('include/back_navigator.ejs') %>
<!-- end Navigation-->
  <!-- ============================================================== -->
  <div class="page-wrapper">
    <div class="container-fluid">
       <!-- ============================================================== -->
      <div class="row">   
        <div class="col-md-8 col-sm-12">
          <div class="card">
              <form class="form-horizontal" action="/backend/<% if(editing){ %>akamaro_edit<% }else{ %>new_akamaro<% } %>" method="POST" enctype="multipart/form-data">
                  <div class="card-body">
                        <h3 class="card-title">
                            <b>
                              Fill the form to 
                              <% if(editing){ %> update <% }else{ %>get<% } %> the meaning of beings
                            </b>
                        </h3><hr>
                      <% if(errorMessage){ %>
                        <h3 style="color: brown;"><%= errorMessage %></h3>
                        <% } %>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group ">
                                    <label for="image" class="col-sm-12  control-label col-form-label"> Image</label>
                                    <div class="col-sm-12">
                                        <input type="file" class="form-control" name="image" id="image" placeholder=" Here">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="title" class="col-sm-12  control-label col-form-label"> Title</label>
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control" name="title" id="title" placeholder="Title Here" value="<% if(editing){%><%=editing_data.title %><% } %>">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="subtitle" class="col-sm-12 control-label col-form-label">Subtitle </label>
                                    <div class="col-sm-12">
                                        <% if(editing){ %>
                                        <input type="hidden"  name="akamaro_ID" id="akamaro_ID" value="<%= editing_data._id %>">
                                        <% } %>
                                        <input type="hidden"  name="_csrf" id="_csrf" value="<%= csrfToken %>">
                                        <input type="text" class="form-control" name="subtitle" id="subtitle" placeholder="subtitle  Here"value="<% if(editing){%><%=editing_data.subtitle %><% } %>">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                
                                <div class="form-group ">
                                    <label for="title" class="col-sm-12  control-label col-form-label">Details Description</label>
                                    <div class="col-sm-12">
                                        <textarea name="description" class="form-control" id="description" placeholder="Details meaning description" cols="30" rows="10"><% if(editing){%><%=editing_data.details_data %><% } %></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                  </div>
                  <div class="border-top">
                      <div class="card-body">
                          <button type="submit" class="btn btn-primary"><% if(editing){ %>Save updated meaning<% }else{ %>save new meaning<% } %></button>
                      </div>
                  </div>
              </form>
          </div>
        </div>
        
      </div>
    <!-- ============================================================== -->
    </div>
  </div>
<!-- ============================================================== -->
<%- include('include/back_footer.ejs') %>